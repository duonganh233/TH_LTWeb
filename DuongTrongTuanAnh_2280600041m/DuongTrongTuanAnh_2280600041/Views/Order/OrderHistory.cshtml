@model IEnumerable<Order>

<h2 class="mb-4">Your Order History</h2>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        You have no orders yet. <a asp-controller="Home" asp-action="Index" class="alert-link">Continue Shopping</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-primary">
                <tr>
                    <th scope="col">Order ID</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Total Price (VND)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@order.TotalPrice.ToString("#,##0") VND</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<style>
    h2 {
        color: #007bff;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .alert-link {
        color: #0056b3;
        text-decoration: underline;
    }
</style>