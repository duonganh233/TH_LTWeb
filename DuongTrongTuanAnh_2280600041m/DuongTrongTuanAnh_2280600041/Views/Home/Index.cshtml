@model IEnumerable<DuongTrongTuanAnh_2280600041.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
}

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

            @foreach (var item in Model)
            {
                <div class="col mb-5">
                    <div class="card shadow-sm" style="width: 18rem;">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 300px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@item.Name</h5>
                            <p class="text-muted">Price: @item.Price.ToString("#,##0") VND</p>
                            <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" asp-route-quantity="@numOfQuantity" class="btn btn-outline-dark w-100">
                                <i class="bi bi-cart-fill me-1"></i> Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
