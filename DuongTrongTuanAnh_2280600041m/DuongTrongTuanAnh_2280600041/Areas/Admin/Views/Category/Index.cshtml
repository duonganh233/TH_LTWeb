@model IEnumerable<DuongTrongTuanAnh_2280600041.Models.Category>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/shared/_Layout.cshtml";
}

<h2>Category</h2>
<form asp-area="Admin" asp-action="Add" method="post" enctype="multipart/form-data">
	<button type="submit" class="btn btn-primary">Thêm phân loại</button>
</form>
<table class="table">
	 <thead>
		 <tr>
			 <th>ID</th>
			<th>Tên Loại sản phẩm</th>
			 <th>Thao tác</th>

		 </tr>
	 </thead>
 <tbody>
		@foreach (var category in Model)
		{
			<tr>
				<td>@category.Id</td>
				<td>@category.Name</td>
				
					 <td>
					<a asp-area="Admin" asp-controller="Category" asp-action="Display" asp-route-id="@category.Id" class="btn btn-success">View</a> |
					<a asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning">Edit</a> |
					<a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
					 </td>
				 </tr>
		}
 </tbody>
</table>
